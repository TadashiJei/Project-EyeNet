# Monitoring Email Notifications
ENABLE_EMAIL_NOTIFICATIONS=true
EMAIL_MIN_SEVERITY=warning  # Options: info, warning, error, critical

# SMTP Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-smtp-password
SMTP_FROM=eyenet-monitoring@your-domain.com

# Discord Integration
DISCORD_WEBHOOK_URL=your-discord-webhook-url
DISCORD_MIN_SEVERITY=warning

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:3000

# Monitoring Settings
MONITORING_RETENTION_DAYS=30
MONITORING_UPDATE_INTERVAL=30000  # 30 seconds

# Alert Settings
ALERT_HISTORY_SIZE=100
ALERT_BATCH_INTERVAL=300000  # 5 minutes (to prevent email flooding)

# Notification Schedule Settings
DAILY_SUMMARY_SCHEDULE="0 9 * * *"      # Every day at 9 AM
PERFORMANCE_REPORT_SCHEDULE="0 0 * * 1"  # Every Monday at midnight
SECURITY_AUDIT_SCHEDULE="0 1 * * *"      # Every day at 1 AM
SYSTEM_HEALTH_SCHEDULE="*/30 * * * *"    # Every 30 minutes
